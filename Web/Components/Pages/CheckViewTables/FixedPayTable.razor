@using Web.NavigationServices

@inject CheckCalculateService Service
@inject ILocalizationService Localizer

@if (_filtered is not null && _filtered.Any())
{
    <MudText Typo="Typo.h6">@Localizer["AdditionalFixedPayments"]</MudText>

    <MudDataGrid Items="@_filtered" Bordered="true" Dense="true"
                 SortMode="SortMode.None">
        <Columns>
            <PropertyColumn Property="x=>x.Tariff.FixedPayName" StickyLeft="true" Title="@Localizer["Service"]" Editable="false" />
            <PropertyColumn Format="C" Property="x=>x.Tariff.FixedPay" Editable="false" Title="@Localizer["Сost"]" />
        </Columns>
    </MudDataGrid>
}

@code {
    [Parameter, EditorRequired]
    public required ICollection<RecordEditDto> Model { get; set; }
    private IEnumerable<RecordEditDto>? _filtered;

    protected override void OnInitialized()
    {
        DoFiltering();
        Service.OnModelUpdated += DoFiltering;
    }

    void DoFiltering()
    {
        _filtered = Model.Where(x => x.Tariff.TariffType != TariffType.Fixed && x.Tariff.UseFixedPay);
        StateHasChanged();
    }
}
