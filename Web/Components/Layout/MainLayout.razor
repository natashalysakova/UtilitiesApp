@inject ILocalizationService Localizer

@inherits LayoutComponentBase

@* Required *@
<MudThemeProvider IsDarkMode="true" />
<MudPopoverProvider />

@* Needed for dialogs *@
<MudDialogProvider />

@* Needed for snackbars *@
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@((e) => DrawerToggle())" />
        <MudText Typo="Typo.h5" Class="ml-3">@Localizer["AppTitle"]</MudText>
        <MudSpacer />
        <CultureSelector />
    </MudAppBar>
    <MudDrawer @bind-Open="@_drawerOpen" Width="280px" Variant="DrawerVariant.Responsive" ClipMode="DrawerClipMode.Always">
        <NavMenu></NavMenu>
    </MudDrawer>
    <MudMainContent>
        <MudContainer MaxWidth="MaxWidth.Large">
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>
@code {
    bool _drawerOpen = true;

    void DrawerToggle()
    {
        _drawerOpen = !_drawerOpen;
    }
}

<div id="blazor-error-ui">
    @Localizer["UnhandledError"]
    <a href="" class="reload">@Localizer["Reload"]</a>
    <a class="dismiss">🗙</a>
</div>


